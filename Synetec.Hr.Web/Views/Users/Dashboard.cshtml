@model IEnumerable<Synetec.Hr.Web.Models.Users.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h2>@ViewData["Title"]</h2>

<p>
    @Html.ActionLink("Create User", "CreateUser", "Users")
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Roles
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        @Html.HiddenFor(m => item.Id)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
            </td>
        </tr>
    }
    </tbody>
</table>
